<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="user" class="com.mfn.onlineshop.entity.User" />
	<var name="address" class="com.mfn.onlineshop.entity.Address" />

	<view-state id="personal" view="flows/register/signup-personal" model="user">
		<transition on="address" to="address" />
	</view-state>

	<view-state id="address" view="flows/register/signup-address" model="address">
		<transition on="personal" to="personal" />
		<transition on="confirm" to="confirm" />
	</view-state>

	<view-state id="confirm" view="flows/register/signup-confirm">
		<transition on="personal" to="personal" />
		<transition on="confirm" to="confirm" />
		<transition on="success" to="success" />
	</view-state>

	<end-state id="home" view="externalRedirect:contextRelative:/" />
	<end-state id="success" view="flows/register/signup-success" />

	<global-transitions>
		<transition on="home" to="home" />
	</global-transitions>

</flow>